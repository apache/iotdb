                            <execution>
                                <id>copy-master-zh-userguide-docs-to-vue-source-folder</id>
                                <!-- here the phase you need -->
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
