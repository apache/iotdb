                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/vue-source/src</outputDirectory>
                                    <!-- output directory -->
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/src/main/</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
